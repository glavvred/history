{% extends 'base.html.twig' %}

{% block title %}Где история: Подборки от наших модераторов{% endblock %}

{% block content %}
    <div class="container main-section">
        {% set first_crumb = 'Все подборки' %}
        {% include ('pages/base/breadcrumbs.html.twig') %}

        <!--collections list-->
        <div class="row">
            <div class="col-md-12">
                <h1>Подборки мероприятий</h1>
                <div class="event-card-container">
                    <ul class="event-card-content">
                        {% for event_collection in event_collections %}
                            <li class="event-card">
                                <div class="event-card-head">
                                    <a href="{{ path('app_event_collection_show_slug', {'slug': event_collection.slug}) }}"><img
                                                src="{{ asset('upload/images/') }}{{ event_collection.mainPhoto }}"
                                                alt="{{ event_collection.name }}"/></a>
                                </div>
                                <a href="{{ path('app_event_collection_show_slug', {'slug': event_collection.slug}) }}"><h3
                                            class="event-card-title">{{ event_collection.name }}</h3></a>
                                <a href="{{ path('app_event_collection_show_slug', {'slug': event_collection.slug}) }}"><p
                                            class="event-card-caption">{{ event_collection.shortDescription|striptags }}</p>
                                </a>
                                <div class="event-card-location">
                                    {{ 'events'|trans({'count' : event_collection.events|length}) }}
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        <!--end collections list-->
    </div>
{% endblock %}
