<!--cards list-->
<div class="row">
    <div class="col-md-12">
        <div class="event-card-container">
            <ul class="event-card-content">
            {% set break = false %}
               {% for organisation in organisations %}
                {% if not break %}
                    <li class="event-card">
                        <div class="event-card-head">
                            <a href="{{ path('app_organisation_show_slug', {'slug' : organisation.slug} ) }}"><img src="{{ asset('upload/images/') }}{{ organisation.mainPhoto }}"/></a>
                            <div class="event-card-image-tag-list">
                                <a href="/event/list/{{ organisation.category.short }}"
                                   class="event-card-tag-link active">{{ organisation.category.name }}</a>
                            </div>
                        </div>
                        <a href="{{ path('app_organisation_show_slug', {'slug' : organisation.slug} ) }}"><h3 class="event-card-title">{{ organisation.name }}</h3></a>
                        <a href="{{ path('app_organisation_show_slug', {'slug' : organisation.slug} ) }}"><p
                                    class="event-card-caption">{{ organisation.description|striptags|u.truncate(100, '...', true) }}</p>
                        </a>
                        <div class="event-card-location">
                            <a href="#">{{ organisation.address }}</a>
                        </div>
                    </li>
                    {% endif %}
                    {% if loop.index >3 %}
                     {% set break = true %}
                    {% endif %}
                {% endfor %}

            </ul>
        </div>
    </div>
</div>
<!--end cards list-->
